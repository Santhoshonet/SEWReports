<h1>Issues and Risks</h1>
    <h2>Issues<span></span></h2>
    <div class="inner-box clearfix">
		<div id="table-full">
			<table cellspacing="0" cellpadding="0" class="Tblissue">
				<tbody>
					<tr class="header">
						<td>Month</td>
					    <td>Active</td>
						<td>Closed</td>
						<td>Action</td>
					</tr>
                    <% @issues.each_with_index do |issue,index| %>
                        <% if index%2 == 0 %>
                            <tr class="alternate">
                        <% else %>
                            <tr>
                        <% end %>
                            <td><%=h issue.month.strftime("%b - %Y") %></td>
						    <td><%=h issue.active %></td>
                            <td><%=h issue.closed %></td>
                            <td class="actions" issueid='<%= issue.id %>'><%= link_to 'Edit',edit_issue_path(issue),:class => "edit" %></td>
					    </tr>
                    <% end %>
                   <tr class="new-item">
                        <td colspan="4" class="new">
                            <a href="#" class="edit" id="LnkAddNewIssue">Add new issue</a>
                        </td>
                    </tr>
                    <% form_for(@issue) do |f| %>
                        <% unless flash[:error].nil? %>
                            <tr class="new-item form error new-issue">
                              <td colspan="4">
                                <div class="error">
                                    <%= flash[:error] %>
                                </div>
                              </td>
                            </tr>
                        <% end %>
                        <tr class="new-item form new-issue">
                            <td class="data-entry" colspan="2">
                                <label>Month</label>
                                <%= f.text_field :month, :class => "medium" %>
                            </td>
                            <td class="data-entry" colspan="2">
                                <label>Active</label>
                                <%= f.text_field :active, :class => "medium" %>
                            </td>
                        </tr>
                        <tr class="new-item form new-issue">
                            <td class="data-entry" colspan="2">
                                <label>Closed</label>
                                <%= f.text_field :closed, :class => "medium" %>
                            </td>
                            <td class="data-entry" colspan="2">
                            </td>
                        <tr class="new-item form new-issue">
        	                <td class="submit" colspan="4">
                                <button>Add issue</button> or <a href="#" id="CancelAddIssue">Cancel</a>
                            </td>
                        </tr>
                     <% end %>
				</tbody>
			</table>
		</div>
	</div>




