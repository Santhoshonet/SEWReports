 <% form_for(@qualityhscindex) do |f| %>
   <table cellspacing="0" cellpadding="0" class="edit-table">
    <tr class="new-item form error" style='display:none;'>
        <td colspan="2">
            <div class="error">
                <%= flash[:error] %>
                <%= f.error_messages %>
            </div>
        </td>
    </tr>
    <tr class="new-item form new-risk">
        <td class="data-entry">
            <label>Month</label>
            <%= f.text_field :month, :class => "medium monthField" %>
        </td>
        <td class="data-entry">
            <label>Quality Index</label>
            <%= f.text_field :qualityindex, :class => "medium qualityindexField" %>
        </td>
    </tr>
    <tr class="new-item form new-risk">
        <td class="data-entry">
            <label>HSC Index</label>
            <%= f.text_field :hscindex, :class => "medium hscindexField" %>
        </td>
        <td class="data-entry">
        </td>
    </tr>
    <tr>
        <td class="submit" colspan="2">
            <button class='BtnEditQualityHscIndex' qualityhscid=<%= @qualityhscindex.id %>>Edit quality and hsc index</button> or <a href="#" class="CancelEditQualityHscIndex">Cancel</a>
        </td>
    </tr>
   </table>
  <% end %>