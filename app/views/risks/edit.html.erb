<% form_for(@risk) do |f| %>
   <table cellspacing="0" cellpadding="0" class="edit-table">
    <tr class="new-item form error" style='display:none;'>
        <td colspan="2">
            <div class="error">
                <%= flash[:error] %>
                <%= f.error_messages %>
            </div>
        </td>
    </tr>
    <tr class="new-item form new-risk">
        <td class="data-entry">
            <label>Month</label>
            <%= f.text_field :month, :class => "medium monthField" %>
        </td>
        <td class="data-entry">
            <label>Active</label>
            <%= f.text_field :active, :class => "medium activeField" %>
        </td>
    </tr>
    <tr class="new-item form new-risk">
        <td class="data-entry">
            <label>Closed</label>
            <%= f.text_field :closed, :class => "medium closedField" %>
        </td>
        <td class="data-entry">
        </td>
    </tr>
    <tr>
        <td class="submit" colspan="2">
            <button class='BtnEditRisk' riskid=<%= @risk.id %>>Edit risk</button> or <a href="#" class="CancelEditRisk">Cancel</a>
        </td>
    </tr>
   </table>
  <% end %>